<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/p3_pnlPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrmVisorGeneral">

    <ImageView
        android:id="@+id/p3_imglogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@color/background_color"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="115dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/p3_txtNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KOLA SHALER DESC 120ONX(C24)"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p3_txtPrecioUnitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="UNID. C$ 9,298.00"
            android:textColor="@color/purple_700"
            android:textSize="96sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/p4_pnlprecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center_horizontal"
                    android:text="Docena"
                    android:textSize="34sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:background="@drawable/backgroup_price"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="C$ 223.10"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="60sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/p4_pnlpresentacion"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-115dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/price_color"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/p3_lblColocarProducto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/img_hand24x24"
        android:gravity="end"
        android:text="@string/lblCodigoBarra"
        android:textColor="@color/price_color"
        android:textSize="34sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="-500dp"
        android:foregroundGravity="top|right">

        <ImageView
            android:id="@+id/p3_imgpromo1"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img_promocion" />

        <ImageView
            android:id="@+id/p3_imgpromo2"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/img_promocion" />
    </RelativeLayout>


